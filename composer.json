{
    "name": "demo/php-slim-app",
    "description": "Minimal production-like PHP demo with Slim Framework 4",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.13",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.48"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:coverage": "phpunit --coverage-html coverage --coverage-text",
        "test:coverage-xml": "phpunit --coverage-clover coverage.xml --coverage-text",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "ci": [
            "@cs:check",
            "@phpstan",
            "@test:coverage-xml"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2"
        }
    }
}
